{
  "name": "redux-resource-project",
  "private": true,
  "scripts": {
    "test": "npm run lint && npm run test:unit",
    "test:unit": "cross-env BABEL_ENV=test nyc --reporter=lcov --reporter=text mocha --compilers js:babel-register --colors test/setup/node.js packages/*/test/unit/**",
    "lint": "eslint \"packages/*/{src,test}/**/*.js\" \"./packages/*/webpack.config.js\"",
    "build": "lerna run build",
    "clean": "lerna clean",
    "publish": "npm run build && lerna publish",
    "bootstrap": "lerna bootstrap",
    "contributors:add": "all-contributors add",
    "contributors:generate": "all-contributors generate",
    "docs:watch": "npm run docs:prepare && gitbook serve",
    "docs:prepare": "gitbook install",
    "docs:clean": "rimraf _book",
    "docs:build": "npm run docs:prepare && gitbook build",
    "docs:publish": "npm run docs:clean && npm run docs:build && cp CNAME _book && cd _book && git init && git commit --allow-empty -m 'update book' && git checkout -b gh-pages && touch .nojekyll && git add . && git commit -am 'update book' && git push git@github.com:jmeas/redux-resource gh-pages --force"
  },
  "license": "MIT",
  "devDependencies": {
    "all-contributors-cli": "^4.4.0",
    "babel-core": "^6.25.0",
    "babel-plugin-istanbul": "^4.1.4",
    "babel-plugin-rewire": "^1.1.0",
    "babel-preset-env": "^1.6.0",
    "babel-preset-stage-3": "^6.24.1",
    "babel-register": "^6.24.1",
    "chai": "^4.0.2",
    "cross-env": "^5.0.1",
    "eslint": "^4.1.1",
    "gitbook-cli": "^2.3.0",
    "lerna": "^2.0.0",
    "mocha": "^3.4.2",
    "nyc": "^11.0.3",
    "pleaserc": "^2.4.0",
    "rimraf": "^2.6.1",
    "sinon": "^2.3.6",
    "sinon-chai": "^2.11.0"
  },
  "nyc": {
    "sourceMap": false,
    "instrument": false,
    "exclude": [
      "packages/*/{dist,test,lib}/**/*.js",
      "packages/node_modules/**/*"
    ]
  },
  "dependencies": {
    "gitbook-plugin-anchorjs": "1.1.1",
    "gitbook-plugin-edit-link": "2.0.2",
    "gitbook-plugin-ga": "1.0.1",
    "gitbook-plugin-github": "2.0.0",
    "gitbook-plugin-prism": "2.3.0"
  }
}
